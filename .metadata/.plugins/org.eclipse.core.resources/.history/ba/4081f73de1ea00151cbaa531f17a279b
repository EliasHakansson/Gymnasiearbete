package game.entity.mob;

import game.entity.mob.Mob.Direction;
import game.graphics.Screen;
import game.graphics.Sprite;

public class Shooter extends Mob{
	
	private int time;

	public Shooter(int x, int y){
		this.x = x * 16;
		this.y = y * 16;
		sprite = Sprite.dummy;
	}

	public void tick() {	
		Player p = level.getClientPlayer();
		double dx = p.getX() - x;
		double dy = p.getY() - y;
		double dir = Math.atan2(dy, dx);
		shoot(x, y, dir);
		
		time++;
		if (time % (random.nextInt(50) + 30) == 0){
			xa = random.nextInt(3) -1;
			ya = random.nextInt(3) -1;
			if (random.nextInt(4) == 0){
				xa = 0;
				ya = 0;
			}
		}
		
		if (walking){
			animSprite.tick();
		}else {
			animSprite.setFrame(0);
		}
		
		if (ya < 0) {
			animSprite = up;
			dir = Direction.UP;
			
		} else if(ya > 0) {
			animSprite = down;
			dir = Direction.DOWN;	
		}
		if(xa < 0) {
			animSprite = left;
			dir = Direction.LEFT;
		}else if(xa > 0){
			animSprite = right;
			dir = Direction.RIGHT;	
		}
		if(xa != 0 || ya != 0) {
			move(xa,ya);
			walking = true;
		}else {
			walking = false;
		}
	}
	

	public void render(Screen screen) {	
		screen.renderMob(x-8, y-8, sprite, 0);
	}
}
