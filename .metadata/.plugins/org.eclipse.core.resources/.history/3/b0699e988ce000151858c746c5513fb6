package game.entity.mob;

public class PlayerStats extends Player {

	private Player player;

	private float maxHealth = 100;
	private float health = maxHealth;
	private float healthScale = health / maxHealth;

	public PlayerStats(Player player){
		this.player = player;
	}
	
	public void tick(){
		
	}
	
	public void render(Graphics2D){
		g.setColor(Color.GREEN);
		g.fillRect{
			(int)player.getPos().xpos + 4 - 32*5 / 2 + 32/2,
			(int)player.getPos().ypos -32*2-11, 32*5 - 11 * (int) healthScale,40
		}
	}
}
